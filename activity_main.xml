<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/PrimeCutsPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/prime_steak"
        />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:padding="@dimen/slogan_padding"
        android:text="@string/slogan"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/slogan_text_size"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/description_top_margin"
        android:padding="@dimen/description_padding"
        android:text="@string/cuts"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/reg_text_size"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/address_margin"
        android:autoLink="map"
        android:padding="@dimen/address_padding"
        android:text="@string/address"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/reg_text_size"
        />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/phone_number_margin"
        android:autoLink="phone"
        android:text="@string/phone_number"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/reg_text_size"
        />

</RelativeLayout>